                    <span>COUNTRY</span>
                    <input type="text" name="name" id="name" required placeholder="Country">
                </div>
                <div>
                    <span>PHONE</span>
                    <input type="number" name="phone" id="phone" required placeholder="Phone" />
                </div>
                <div id="terms">
                    <span>SPECIAL REQUEST</span>
                    <textarea type="text" name="name" id="name">
</textarea>
                </div>
                <div id="terms">
